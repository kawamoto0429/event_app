<div class="h1 text-center">イベント企画</div>
<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mt-2">
    <label class="form-label">イベント名</label>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="field">
    <label class="form-label">イベント詳細</label>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <div class="field">
    <label class="form-label">場所</label>
    <%= f.text_field :address, class: 'form-control' %>
  </div>
  <div class="field">
    <label class="form-label">開催日時</label>
    <%= f.datetime_field :hold, class: 'form-control', min: Date.current%>
  </div>
  <div class="field">
    <label class="form-label">ジャンルの種類</label>
    <select name="genre_id">
      <% @genres.each do |genre| %>
      <option value="<%= genre.id %>"><%= genre.name %></option>
      <% end %>
    </select>
  </div>
  <div class="mx-auto" style="width: 10rem;">
    <%= f.submit "作成", class: "btn btn-primary btn-block" %>
  </div>
<% end %>