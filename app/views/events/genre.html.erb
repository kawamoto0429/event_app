<div class="d">
    <div class="h1">
        イベント
    </div>
    <div>
        <%= form_with url: genre_path, method: :get, local: true do |f| %>
            <select name="genre_id">
              <% @genres.each do |genre| %>
              <option value="<%= genre.id %>"><%= genre.name %></option>
              <% end %>
            </select>
            <%= f.submit "検索" %>
        <% end %>
    </div>
</div>
<div class=" h2"> 
<% @events.each do |event|%>
    <div class="d mb">
        <div><%= image_tag 'no_mage.jpeg' , class: "image"%></div>
        <div>
            <%= link_to event.title, event_path(event) %>
        </div>
      
    </div>
<% end %>    
</div>