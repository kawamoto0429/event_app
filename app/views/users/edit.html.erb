<div class="card mx-auto mt-2" style="width: 30rem;">
  <div class="h2 text-center">Profile_Edit</div>
  <div class=" text-center">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class:"form-control" %>

      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email, class:"form-control" %>

      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class:"form-control" %>

      <%= f.label :password_confirmation, "確認パスワード" %>
      <%= f.password_field :password_confirmation, class:"form-control" %>
      
      <%= f.label :body, "自己紹介文" %>
      <%= f.text_area :body, class:"form-control", style: "width: 30rem; height: 20rem;" %>
      
      <div class="mx-auto m-2" style="width: 10rem;">
        <%= f.submit "編集する", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
</div>